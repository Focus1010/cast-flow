# Cast Flow Environment Variables

# Farcaster API (Required)
NEXT_PUBLIC_FARCASTER_HUB_URL=https://hub.farcaster.xyz
NEYNAR_API_KEY=YOUR_NEYNAR_API_KEY
NEYNAR_SIGNER_UUID=YOUR_NEYNAR_SIGNER_UUID

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_SERVICE_KEY=YOUR_SUPABASE_SERVICE_KEY

# Blockchain Configuration (Required for tipping)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
NEXT_PUBLIC_ENB_ADDRESS=YOUR_ENB_TOKEN_ADDRESS
NEXT_PUBLIC_CASTFLOW_TOKEN_ADDRESS=YOUR_CASTFLOW_TOKEN_ADDRESS
NEXT_PUBLIC_TIPPING_CONTRACT_ADDRESS=YOUR_TIPPING_CONTRACT_ADDRESS
ADMIN_PRIVATE_KEY=YOUR_ADMIN_WALLET_PRIVATE_KEY

# Cron Job Security (Required for auto-posting)
CRON_SECRET=YOUR_SECURE_RANDOM_STRING
VERCEL_URL=https://your-app.vercel.app

# Admin Configuration
NEXT_PUBLIC_ADMIN_FID=YOUR_ADMIN_FARCASTER_ID

# Optional Analytics
NEXT_PUBLIC_UMAMI_ID=
NEXT_PUBLIC_GOOGLE_ANALYTICS=

# Deployment
NODE_ENV=production
